extends ../components/base/layout

block variables
  - const title = "ProjectName" //- на страницах кроме главной используйте О нас — ProjectName
  - const wrapperMods = ""
  - const hasHeader = false
  - const headerMods = ""
  - const hasFooter = false
  - const footerMods = ""
  - const currentUrl = "index.html" //- для остальных страниц пишем пустую строку или индекс активного headerLinks

block main
  main
    .section.section--full.section--bg-white(data-scroll-section, data-section-bg)
      .section__bg
      .section__body
        h1.title.section__center-title.title--wheat(data-splitting="wave") ПРОДАЮЩИЙ ТЕКСТ
    +slide-grid()
    +steps()(style="margin-top: -100vh;")
    +ux-parallax-block()
    .click-section(data-scroll-section)
      .btn(data-cursor-btn="circle")
        .btn__text click

    .scroll-section.scroll-section--horizontal(data-scroll-section="horizontal")
      .scroll-section__wrapper
        .scroll-section__container
          .container
            .section


